<!-- Modal -->
  <div class="modal-dialog" role="document">
    <%= form_for(@note, url: notes_path, method: :post) do |form| %>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create Note</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% @notes.each do |note| %>
              <div class="container">
                <% if note.change %>
                  <span><i class="bi bi-exclamation-lg"></i></span>
                <% end %>
                <%= "#{note.author.visible_name}: #{note.content}" %>
              </div>
            <% end %>
          <div class="form-control">
            <%= form.label :content %>
            <%= form.text_field :content %>
          </div>
          <div class="form-control">
            <%= form.label :change? %>
            <%= form.check_box :change %>
          </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= form.submit "Create", class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>
  </div>