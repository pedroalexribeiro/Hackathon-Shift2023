
<div class="row" styles="display: flex; align-items: center;">
  <div class="col">
    <% if deadline.finalised? %>
      <i class="bi bi-check-circle-fill"></i>
    <% else %>
      <i class="bi bi-check-circle"></i>
    <% end %>
  </div>
  <div class="col">
    <span><%= deadline.name %></span>
  </div>
  <div class="col">
    <%= link_to "Notes", new_client_project_deadline_path(@client, @project), remote: true, class: "btn btn-#{@client.projects.empty? ? 'secondary' : 'default'} btn-xs-fixed m-xs-0" %>
  </div>
  <div class="col">
    <%= link_to "Documents", new_client_project_deadline_path(@client, @project), remote: true, class: "btn btn-#{@client.projects.empty? ? 'secondary' : 'default'} btn-xs-fixed m-xs-0" %>
  </div>
  <div class="col ml-auto">
    <div class="row">
      <div class="col">
        <i class="bi bi-check-circle"></i>
      </div>
      <div class="col">
        <i class="bi bi-check-circle"></i>
      </div>
      <div class="col">
        3:30
      </div>
    </div>
  </div>
</div>
