<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div id="example" class="form-group">
      <div class="form-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "user@freelancer.com" %>
      </div>

      <div class="form-field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field" style="display:inline-flex;">
          <%= f.label :remember_me, class: "form-check-label" %>
          <%= f.check_box :remember_me, class: "" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary", style:"background-color: green;" %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

